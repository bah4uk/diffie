%h3 QR Code
.row
  = form_tag('/calculate_qr') do
    .span4
      = label_tag(:sample, "Enter sample url")
      = text_field_tag(:sample)
      %br
      = submit_tag("Generate")
    .span2
    .span6
      - unless @qr.nil?
        %table
          - @qr.modules.each_index do |x|
            %tr
              - @qr.modules.each_index do |y|
                - if @qr.dark?(x,y)
                  %td.black
                - else
                  %td.white

:css
  table {
   border-width: 0;
   border-style: none;
   border-color: #0000ff;
   border-collapse: collapse;
  }
  td {
    border-width: 0;
    border-style: none;
    border-color: #0000ff;
    border-collapse: collapse;
    padding: 0;
    margin: 0;
    width: 10px;
    height: 10px;
  }
  td.black { background-color: #000; }
  td.white { background-color: #fff; }
